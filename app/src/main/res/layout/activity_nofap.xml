<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NofapActivity">


    <TextView
        android:id="@+id/addBtnWidgetNofap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:layout_marginRight="20dp"
        android:text="Widget"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textNofapHari"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="7"
        android:textSize="120sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Hari"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textNofapHari"
        app:layout_constraintStart_toStartOf="@+id/textNofapHari"
        app:layout_constraintTop_toBottomOf="@+id/textNofapHari" />

    <TextView
        android:id="@+id/textNofapJam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:text="00 Jam 00 Menit"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textNofapHari"
        app:layout_constraintStart_toStartOf="@+id/textNofapHari"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResetNofap"

        android:layout_width="176dp"
        android:layout_height="41dp"

        android:layout_marginTop="24dp"
        android:background="@drawable/buttonrounded"

        android:text="RESET"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textNofapHari"
        app:layout_constraintStart_toStartOf="@+id/textNofapHari"
        app:layout_constraintTop_toBottomOf="@+id/textNofapJam" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="60dp"
        android:text="“Lust is the craving for salt of a man who is dying of thirst”"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>