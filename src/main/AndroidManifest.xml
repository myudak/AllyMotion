<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_bener_100"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_bener_100_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AllyMotion"
        tools:targetApi="31">
        <activity
            android:name=".SingleImageActivity"
            android:exported="false" />

        <receiver
            android:name=".widget.NofapWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/nofap_widget_info" />
        </receiver>

        <activity
            android:name=".SettingActivity"
            android:exported="false" />
        <activity
            android:name=".ResultsFoodActivity"
            android:exported="false" />
        <activity
            android:name=".NofapActivity"
            android:exported="false" />
        <activity
            android:name=".OnBoardingActivity"
            android:exported="false"
            android:label="@string/title_activity_on_boarding_screen"
            android:theme="@style/Theme.AllyMotion" />
        <activity
            android:name=".WelcomeActivity"
            android:exported="false"
            android:label="@string/title_activity_welcome"
            android:theme="@style/Theme.AllyMotion" />
        <activity
            android:name=".LoginGoogleActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".util.mlkit.activity.LivePreviewActivity"
            android:exported="false" />
        <activity android:name=".util.mlkit.activity.SettingsActivity"
            android:exported="false" />
        <activity android:name=".util.mlkit.activity.CameraXLivePreviewActivity"
            android:exported="false"
            />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AllyMotion.starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>